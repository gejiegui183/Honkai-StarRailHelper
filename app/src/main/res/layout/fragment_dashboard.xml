    </LinearLayout>
    <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="214dp"
            android:layout_height="38dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.216">
